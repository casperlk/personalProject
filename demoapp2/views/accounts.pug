extends layoutBS

block content
  h1 Add a Account
  form(method="post" action="saveAccount")
    .formGroup
      label account name
      input(type="text" name="name")
    .formGroup
      label description
      textarea(name="description" rows="10" cols="80")
    input(type="submit")
  hr
  h1 List of All Accounts
  form(method="post" action="deleteAccount")
    ol
      each account in accounts
        li
          input(name="deleteName" value=account.name type="checkbox")
          e #{account.name} --
          i #{account.description}
    input(type="submit" value="Delete checked items")
    hr
