extends layoutBS

block content
  .jumbotron
    h1.display-4= title
  .jumbotron


    form(method="post")

      .col-md-4.mb-3
        label(for='validationCustomUsername') First Name
        .input-group
          input(type='text' name="firstName" placeholder='CurrentName' aria-describedby='inputGroupPrepend' required='')#validationCustomUsername.form-control

      .col-md-4.mb-3
        label(for='validationCustomUsername') Last Name
        .input-group
          input#validationCustomUsername.form-control(type='text' name="lastName" placeholder='CurrentLastname' aria-describedby='inputGroupPrepend' required='')

      .col-md-4.mb-3
        label(for='validationCustomUsername') Username
        .input-group
          input#validationCustomUsername.form-control(type='text' name="username" placeholder='CurrentUsername' aria-describedby='inputGroupPrepend' required='')

      <button type="submit" class="btn btn-primary">Save Changes</button>
